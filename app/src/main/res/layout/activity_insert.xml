        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="440dp"
        android:fontFamily="@font/open_sans_light"
        android:text="Nomor Jalan : "
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idnamajalaninsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="408dp"
        android:fontFamily="@font/open_sans_light"
        android:text="Nama Jalan : "
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idkecamataninsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="476dp"
        android:fontFamily="@font/open_sans_light"
        android:text="Kecamatan : "
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNoInsert"
        android:layout_width="60dp"
        android:layout_height="34dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="432dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/idnojalaninsert"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextJalanInsert"
        android:layout_width="260dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="400dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/idnamajalaninsert"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idwakilinsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="584dp"
        android:fontFamily="@font/open_sans_light"
        android:text="Nama : "
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idnohpinsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="552dp"
        android:fontFamily="@font/open_sans_light"
